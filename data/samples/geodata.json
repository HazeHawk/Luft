//Alternativ
{
    <location field>: {
       $geoWithin: {
          $polygon: [ [ <x1> , <y1> ], [ <x2> , <y2> ], [ <x3> , <y3> ], ... ]
       }
    }
 }

//Alternativ
{
    <location field>: {
       $geoWithin: {
          $box: [
            [ <bottom left coordinates> ],
            [ <upper right coordinates> ]
          ]
       }
    }
  }










